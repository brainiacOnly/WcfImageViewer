<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>
  <system.serviceModel>
    <services>
      <service name="WcfImageViewer.Services.FileSystemPictureManager">
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:9091" />
          </baseAddresses>
        </host>
        <endpoint address="net.tcp://localhost:9090/PictureManager" binding="netTcpBinding" contract="WcfImageViewer.Contracts.IPictureManager" />
        <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />
      </service>
    </services>
    <behaviors>
      <serviceBehaviors>
        <behavior>
          <serviceMetadata httpGetEnabled="true" />
        </behavior>
      </serviceBehaviors>
    </behaviors>
  </system.serviceModel>
</configuration>